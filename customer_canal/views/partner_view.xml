<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_res_partner_canal_form" model="ir.ui.view">
            <field name="name">Partner Canal</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="canal_id" placeholder="Canal" />
                   <!--  attrs="{'required': [('state_detail_id', '=', 1)]}" -->
                </field> 
            </field>  
        </record>



        <record id="view_canal_res_partner_form" model="ir.ui.view">
            <field name="name">Partner Canal</field>
            <field name="model">res.partner.canal</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </form> 
            </field>  
        </record>


        <record id="view_canal_res_partner_tree" model="ir.ui.view">
            <field name="name">Partner Canal.tree</field>
            <field name="model">res.partner.canal</field>
             <field name="arch" type="xml">
                <tree string="Partner Canal">
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
